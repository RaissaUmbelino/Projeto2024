<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

   

    <%- include("../partials/cabecalho.ejs") %>
    <style>
        table{
            width: 100%;
            border: 1px solid black;
            text-align: center;

        }
       
    </style>
</head>
<body>
    <%if(sucesso == "1"){%>
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            Cadastrado com <b>sucesso.</b>
            </div>

    <% } %>

    <%if(sucesso == "2"){%>
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            Removido com <b>sucesso.</b>
            </div>

    <% } %>

    <%if(sucesso == "3"){%>
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            Atualizado com <b>sucesso.</b>
            </div>

    <% } %>

    <table class="table table-striped">
        <tr>
            <th>Matr√≠cula</th>
            <th>Nome</th>
            <th>Curso</th>
            <th>Detalhar</th>
            <th>Remover</th>
            <th>Editar</th>

        </tr>
        <% alunos.forEach(aluno => { %>
            <tr>
                <td> <%=aluno.matricula%></td>
                <td><%=aluno.nome%></td>
                <td><%=aluno.curso%></td>
                <td>
                    <a href="/alunos/<%=aluno.matricula%>">
                        <button type="button" class = "btn btn-danger">Detalhar</button>
                    </a>
                </td>

                <td>
                    <a href="/alunos/remover/<%=aluno.matricula%>">
                    <button onclick="return confirm('Deseja remover essa pessoa?')" type="button" class = "btn btn-danger">Remover</button>
                    </a>
                </td>

                <td>
                    <a href="/alunos/cadastrar/<%=aluno.matricula%>">
                    <button type="button" class = "btn btn-warning">Editar</button>
                    </a>
                </td>
            </tr>
            <% }) %>
    
        </table>

    <%- include("../partials/rodape.ejs") %>
    
</body>
</html>
